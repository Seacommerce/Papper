{
	"name": "idr0id/papper",
	"type": "library",
	"description": "Papper is library to automatically map the properties and methods between objects.",
	"keywords": ["mapper", "automapper", "modelmapper", "dto"],
	"license": "MIT",
	"authors": [
		{
			"name": "Vladimir Komissarov",
			"homepage": "http://dr0id.ru"
		}
	],
	"require" : {
		"php": ">=5.3.3",
		"symfony/property-access": "~2.4",
		"andrewsville/php-token-reflection": "~1.3"
	},
	"autoload": {
		"psr-0": {
			"Papper": "src"
		}
	},
	"autoload-dev": {
		"psr-0": {
			"Papper\\Tests": "tests",
			"PapperGlobalAnnotationClass": "tests\\Papper\\Tests\\Fixtures\\Annotations"
		}
	},
	"require-dev": {
		"phpunit/phpunit": "~4.0",
		"mockery/mockery": "0.9.*"
	}
}
